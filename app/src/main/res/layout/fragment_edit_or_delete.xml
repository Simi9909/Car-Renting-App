<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.EditOrDelete">


    <TextView
        android:id="@+id/text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40sp"
        android:gravity="center"
        android:text="@string/edit_or_delete"
        android:textColor="@color/black"
        android:textSize="35sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/manufacturer_"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/ed_car_manufacture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autofillHints="@string/manufacturer"
            android:background="@null"
            android:hint="@string/manufacturer"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/model_"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/ed_car_model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autofillHints="@string/model"
            android:background="@null"
            android:hint="@string/model"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textSize="25sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/price_"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/ed_car_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autofillHints="@string/price"
            android:background="@null"
            android:gravity="center"
            android:hint="@string/price"
            android:inputType="phone"
            android:minHeight="48dp"
            android:paddingHorizontal="3sp"
            android:textSize="25sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/euro"
            android:textColor="@color/black"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/equipment_"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <EditText
            android:inputType="textMultiLine"
            android:id="@+id/ed_car_equipment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autofillHints="@string/equipment"
            android:background="@null"
            android:hint="@string/equipment"
            android:minHeight="48dp"
            android:textSize="25sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:orientation="horizontal"
        android:paddingHorizontal="30sp">

        <Switch
            android:id="@+id/switch_car_available"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="@string/not_available"
            android:textSize="25sp"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="15sp"
            android:text="@string/available"
            android:textColor="@color/black"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_save_car_update"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20sp"
            android:text="@string/save"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn_delete_car"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20sp"
            android:text="@string/delete"
            android:textSize="25sp" />
    </LinearLayout>
</LinearLayout>